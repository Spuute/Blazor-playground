<MudCard Class="ma-4 pa-4" Outlined="true" Elevation="2">
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" class="d-flex justify-center">
                <MudAvatar Icon="@Icons.Material.Filled.Person" Size="Size.Large" Class="mb-2"/>
            </MudItem>
            <MudItem xs="12" class="text-center">
                <MudText Typo="Typo.h5">@FirstName @LastName</MudText>
                <MudText Typo="Typo.subtitle2" Class="text-secondary">@JobTitle</MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions Class="justify-space-between">
        <MudButton Color="Color.Primary" Variant="Variant.Filled">View Profile</MudButton>
        <MudButton Class="ms-3" Color="Color.Secondary" Variant="Variant.Outlined" OnClick="RefetchData">Edit</MudButton>
    </MudCardActions>
</MudCard>
